#!/usr/bin/env bash

JAVACMD=${JAVACMD:=java}
SL_JAR=${SL_JAR:=target/simplelanguage-complete-0.1-SNAPSHOT.jar}
SL_MAIN=com.oracle.truffle.sl.SLLanguage

PROGRAM_ARGS=""
JAVA_ARGS=""

for opt in "$@"
do
  case $opt in
    -J*)
      opt=${1:2}
      JAVA_ARGS="$JAVA_ARGS $opt" ;;
    *)
      PROGRAM_ARGS="$PROGRAM_ARGS $opt" ;;
  esac
done

$JAVACMD $JAVA_ARGS -Xbootclasspath/p:$SL_JAR $SL_MAIN $PROGRAM_ARGS
